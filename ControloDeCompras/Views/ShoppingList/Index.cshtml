@model IEnumerable<ShoppingList>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de compras</h1>

<table class="text-center text-dark table-responsive table-sm table table-success table-hover table align-middle" style="width:100%;">
    <thead>
        <tr>
            <th>Género</th>
            <th>Nome</th>
            <th>Variedade</th>
            <th>Quantidade</th>
            <th>Preço</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ShoppingList obj in Model)
        {
            <tr>
                <td>@obj.Genero</td>
                <td>@obj.Nome</td>
                <td>@obj.Variedade</td>
                <td>@obj.Quantidade</td>
                <td>@obj.Preco</td>
            </tr>
        }
        <tr>
            <td colspan="3"></td>
            <td>total:</td>
            <td>@Model.Sum(i=>i.Preco)</td>
        </tr>
    </tbody>
</table>